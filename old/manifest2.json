{
    "name": "BingSolver",
    "description": "Browser extension for Google Chrome & Mozilla Firefox which can do requests to Microsoft Bing",
    "version": "v1.0.0",
    "icons": { "16": "src/assets/icon16.png", "48": "src/assets/icon48.png", "128": "src/assets/icon128.png" },
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "src/default/index.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "css": ["src/solver/bing.css"],
            "js": ["solver.js"]
        }
    ],
    "permissions": ["storage"]
}